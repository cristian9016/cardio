<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyecto.com.cardio.MainActivity$PlaceholderFragment"
    android:gravity="center"
    >

    <Button
        android:text="BASICO"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/botonBasico"
        android:background="@drawable/botonbasico"
        android:layout_marginTop="@dimen/small"
        android:layout_marginBottom="@dimen/small"
        android:textSize="20sp"
        />

    <Button
        android:text="MEDIO"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/botonMedio"
        android:background="@drawable/botonmedio"
        android:layout_marginTop="@dimen/small"
        android:layout_marginBottom="@dimen/small"
        android:textSize="20sp"
        />

    <Button
        android:text="AVANZADO"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/botonAvanzado"
        android:background="@drawable/botonavanzado"
        android:layout_marginTop="@dimen/small"
        android:layout_marginBottom="@dimen/small"
        android:textSize="20sp"
        />
</LinearLayout>
